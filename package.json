{
  "name": "bugtracker",
  "version": "1.0.0",
  "description": "bug tracker project",
  "main": "app.js",
  "repository": "https://github.com/bslzz/bugTracker.git",
  "author": "bslzz <bishalkoid@gmail.com>",
  "license": "MIT",
  "scripts": {
    "server": "nodemon app.js",
    "client": "cd client && yarn start",
    "client-install": "cd client && yarn install",
    "server-install": "yarn install",
    "install-all": "concurrently \"yarn run client-install\"\"yarn run server-install\"",
    "dev": "concurrently \"yarn run server\" \"yarn run client\"",
    "heroku-postbuild": "cd client && yarn install && yarn run build"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "mongoose-sequence": "^5.2.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4"
  }
}
